<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.com.arnold_lin.tips"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".TipsApplication"
        android:theme="@style/AppTheme.NoActionBar"
        android:configChanges="orientation|keyboardHidden|screenSize"
        tools:overrideLibrary="com.appeaser.deckview">
        <activity
            android:name=".SampleSelectActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".recycleview.basic.NormalAdapterActivity"
            android:label="@string/basic">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tw.com.arnold_lin.tips.sample" />
            </intent-filter>
        </activity>

        <!--mix-->
        <activity
            android:name=".recycleview.mix.MixAdapterActivity"
            android:label="@string/mix">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tw.com.arnold_lin.tips.sample" />
            </intent-filter>
        </activity>

        <!--wrapper-->
        <activity
            android:name=".recycleview.wrappers.LimitLessAdapterActivity"
            android:label="@string/wrapper_limitless">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tw.com.arnold_lin.tips.sample" />
            </intent-filter>
        </activity>

        <activity
            android:name=".recycleview.wrappers.AsymmetricAdapterActivity"
            android:label="@string/wrapper_asymmetric">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tw.com.arnold_lin.tips.sample" />
            </intent-filter>
        </activity>

        <activity
            android:name=".recycleview.wrappers.CircularAdapterActivity"
            android:label="@string/wrapper_recipe">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tw.com.arnold_lin.tips.sample" />
            </intent-filter>
        </activity>

        <activity
            android:name=".recycleview.wrappers.AsymmetricLimitLessAdapterActivity"
            android:label="@string/wrapper_asymmetric_limitless">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tw.com.arnold_lin.tips.sample" />
            </intent-filter>
        </activity>

        <activity
            android:name=".recycleview.wrappers.DeckViewAdapterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/wrapper_deck">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="tw.com.arnold_lin.tips.sample" />
            </intent-filter>
        </activity>

    </application>

</manifest>
